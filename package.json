{
  "name": "capital-api-client",
  "version": "1.0.1",
  "description": "TypeScript client library for Capital.com API",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.cjs.js",
    "prepublishOnly": "npm run build && npm run test:build",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.config.json tests/integration.real.test.ts",
    "test:real": "jest --config jest.config.json tests/integration.real.test.ts --verbose",
    "example": "ts-node examples/basic-usage.ts",
    "setup-test": "node setup-test-env.js",
    "test:build": "node -e \"console.log('Testing build outputs...'); const pkg = require('./dist/index.cjs.js'); console.log('✓ CommonJS build works'); const esm = import('./dist/index.esm.js'); console.log('✓ ES Module build works'); console.log('✓ All builds successful');\"",
    "pack:test": "npm pack --dry-run",
    "publish:npm": "npm publish",
    "publish:beta": "npm publish --tag beta",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "capital.com",
    "trading",
    "api",
    "typescript",
    "financial",
    "trading-api",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/capital-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/capital-api-client/issues"
  },
  "homepage": "https://github.com/yourusername/capital-api-client#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "crypto-js": "^4.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.1",
    "@types/ws": "^8.18.1",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "nodemon": "^3.1.10",
    "rollup": "^4.52.3",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
